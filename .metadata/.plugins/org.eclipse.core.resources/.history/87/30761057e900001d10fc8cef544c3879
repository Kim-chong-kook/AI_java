package kr.co.tj;

public class WhileTest {

	public static void main(String[] args) {
		int num=1; // 0으로 초기화 하면, 아래의 후증가문을 위로 1줄 올려야 한다.
		int sum =0;
		
		while(num <=10 ) {
			sum += num; 
			num++; // 후증가를 뒤에서 수행하게 했다. 뭔가 어색함.
		}
		System.out.println(sum);
		System.out.println(num);
		
		num=0;
		sum=0;
		while(num <=10 ) {
			sum += num; 
			num++; // 후증가를 뒤에서 수행하게 했다. 뭔가 어색함.
		}
		System.out.println(sum);
		System.out.println(num);
	
	}

}
