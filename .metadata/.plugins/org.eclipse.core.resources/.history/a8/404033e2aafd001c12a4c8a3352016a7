package day02_test;

public class test5 {
	public static void main(String[] args) {
		double x = 1.2340;
		double y = 10.3459;
		System.out.printf("전체 7자리로 맞추고 소수 4자리까지 출력 \n");
		System.out.printf("x = %7.4f \n",x); // 지수와 가수 분리
		System.out.printf("y = %7.4f \n",y);
		System.out.printf("x = %7.2f %n",x);
		System.out.printf("y = %7.2f %n",y);
		
		// 표준진행
		
	}
}
