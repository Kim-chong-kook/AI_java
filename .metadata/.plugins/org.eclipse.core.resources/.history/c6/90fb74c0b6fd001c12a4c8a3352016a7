package day02_test;

import java.util.Scanner; // input 입력절차가 좀 까다롭다.

public class test6 {
	public static void main(String[] args) {
		
		int age;
				
		Scanner sc  = new Scanner(System.in);
		System.out.println("당신의 나이는 몇살입니까?");
		age = sc.nextInt();
		System.out.printf("당신의 나이는 %d살이군요.",age);
		sc.close(); 
		
	}
}
